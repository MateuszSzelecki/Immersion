<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/navigationHeader"
    android:background="?attr/colorOnPrimary" >

    <ImageView
        android:id="@+id/imageViewLanguageStatistic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewLanguageStatisticDaysFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewLanguageStatisticDaysRecently"
        app:layout_constraintStart_toEndOf="@+id/imageViewLanguageStatistic" />

    <TextView
        android:id="@+id/textViewLanguageStatisticDaysRecently"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewLanguageStatistic"
        app:layout_constraintStart_toEndOf="@+id/imageViewLanguageStatistic"
        app:layout_constraintTop_toTopOf="@+id/imageViewLanguageStatistic" />

    <TextView
        android:id="@+id/textViewLanguageStatisticWords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewLanguageStatisticDaysRecently"
        app:layout_constraintStart_toEndOf="@+id/imageViewLanguageStatistic" />

</androidx.constraintlayout.widget.ConstraintLayout>