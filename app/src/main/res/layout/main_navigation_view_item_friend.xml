<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/navigationHeader"
    android:background="?attr/colorOnPrimary" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageViewFriendStatistic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:src="@mipmap/ic_test_foreground"
        app:shapeAppearanceOverlay="@style/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFriendStatisticImmersionIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewFriendStatisticDaysFrom"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriendStatistic" />

    <TextView
        android:id="@+id/textViewFriendStatisticDaysFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewFriendStatistic"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriendStatistic"
        app:layout_constraintTop_toTopOf="@+id/imageViewFriendStatistic" />

    <TextView
        android:id="@+id/textViewFriendStatisticMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingStart="5dp"
        android:paddingEnd="18dp"
        android:text="."
        android:textColor="?attr/colorPrimary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewFriendStatisticDaysFrom"
        app:layout_constraintStart_toEndOf="@+id/imageViewFriendStatistic" />

</androidx.constraintlayout.widget.ConstraintLayout>